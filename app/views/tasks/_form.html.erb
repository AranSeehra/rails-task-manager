<div class="container">
  <div class="d-flex bd-highlight justify-content-between">
    <%= form_with model: @task do |f| %>
      <div class="d-flex p-2 bd-highlight align-items-center"><%= f.label :title %>
      <div class="d-flex p-2 bd-highlight align-items-center">
        <%= f.text_field :title %>
      </div>
      <div class="d-flex p-2 bd-highlight align-items-center">
        <%= f.label :details %>
          <div class="d-flex p-2 bd-highlight align-items-center">
          <%= f.text_field :details %>
          </div>
      </div>
  </div>
  <div class="d-flex bd-highlight justify-content-between">
      <div class="d-flex p-2 m-2">
        <% unless f.object.new_record? %> <%# can also be shown as @task.object %>
          <%= f.label :completed %>
            <%= f.check_box :completed %>
        <% end %>
      </div>

      <div class="d-flex p-2 bd-highlight">
        <%= f.submit %>
      </div>

    <% end %>
    </div>
  </div>
</div>
